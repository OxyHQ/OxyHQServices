{
    "compilerOptions": {
        "target": "es2020",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "lib": [
            "es2020",
            "dom"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "declaration": true,
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/__tests__/**/*",
        "**/*.test.ts",
        "**/*.test.tsx"
    ]
}
