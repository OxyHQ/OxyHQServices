{
  "name": "@oxyhq/monorepo",
  "version": "1.0.1",
  "description": "OxyHQ Monorepo containing services and API packages",
  "private": true,
  "scripts": {
    "build": "pnpm run build:all",
    "build:workspaces": "pnpm run build --recursive",
    "build:all": "pnpm run build --recursive && pnpm run accounts:build",
    "start": "cd packages/api && pnpm start",
    "dev": "pnpm run dev --recursive",
    "test": "pnpm run test --recursive",
    "clean": "pnpm run clean --recursive",
    "install:all": "pnpm install",
    "api:build": "pnpm run build --filter @oxyhq/api",
    "api:dev": "pnpm run dev --filter @oxyhq/api",
    "api:start": "pnpm run start --filter @oxyhq/api",
    "accounts:build": "cd packages/accounts && pnpm install --legacy-peer-deps && pnpm run build",
    "services:build": "echo 'Skipping services build' && exit 0",
    "services:test": "pnpm run test --filter @oxyhq/services",
    "heroku-postbuild": "pnpm run build:all"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/express-serve-static-core": "^5.0.7",
    "@types/node": "^20.0.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": "18.x || 20.x",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oxyhq/services.git"
  },
  "keywords": [
    "monorepo",
    "oxyhq",
    "services",
    "api",
    "authentication",
    "user-management"
  ],
  "author": "OxyHQ",
  "license": "MIT",
  "dependencies": {}
}